div
  fieldset
    channel-select
    label
      input(type='radio', name='span', ng-model='$ctrl.vlogData.span', ng-change='$ctrl.spanChanged()', value='date')
      | day
    label
      input(type='radio', name='span', ng-model='$ctrl.vlogData.span', ng-change='$ctrl.spanChanged()', value='week')
      | week
    label
      input(type='radio', name='span', ng-model='$ctrl.vlogData.span', ng-change='$ctrl.spanChanged()', value='month')
      | month
    label
      input(type='date', ng-model='$ctrl.date', ng-change='$ctrl.dateChanged()', ng-model-options="{timezone: 'UTC'}")
    button(ng-click='$ctrl.prev()') <
    button(ng-click='$ctrl.next()') >
  fieldset
    label
      input(type='checkbox', ng-model='$ctrl.props.autoPlay')
      | AutoPlay
