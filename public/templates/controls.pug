div
  fieldset
    label
      input(type='text', ng-model='$ctrl.channelName')
      button(ng-click="$ctrl.channel($ctrl.channelName)") Set
  fieldset
    label
      input(type='checkbox', ng-model='$ctrl.autoPlay', ng-change='$ctrl.toggleAutoPlay()')
      |     AutoPlay
    label
      input(type='date', ng-model='$ctrl.date', ng-change='$ctrl.dateChanged()', ng-model-options="{timezone: 'UTC'}")
    button(ng-click='$ctrl.prev()') <
    button(ng-click='$ctrl.next()') >
